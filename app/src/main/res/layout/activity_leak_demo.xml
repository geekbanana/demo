<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cavalry.demo.memoryleak.LeakDemoActivity"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/btn_no_leak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NoLeak"
        />

    <Button
        android:id="@+id/btn_leak_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相互持有对象"
        />

    <Button
        android:id="@+id/btn_leak_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity中的对象被外部静态变量持有"
        />

    <Button
        android:id="@+id/btn_leak_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity中的对象被外部工厂实例持有"
        />

</LinearLayout>
